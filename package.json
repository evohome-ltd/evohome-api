{
  "name": "evohome-api",
  "version": "1.0.0",
  "description": "EvoHome API",
  "author": "EvoHome LTD",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start -e 'node -r dotenv/config'",
    "start:dev": "nest start --watch -e 'node -r dotenv/config'",
    "start:debug": "nest start --debug --watch -e 'node -r dotenv/config'",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "dotenv -e environment/local.env jest --watch",
    "test:cov": "dotenv -e environment/local.envjest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config e2e/jest-e2e.json",
    "sequelize": "sequelize-cli --config=sequelize.config.js",
    "migration:generate": "npm run sequelize migration:generate -- --name",
    "migration:migrate": "npm run sequelize db:migrate",
    "migration:undo": "npm run sequelize db:migrate:undo",
    "seed:generate": "npm run sequelize seed:generate -- --name",
    "seed:all": "npm run sequelize db:seed:all",
    "seed:undo": "npm run sequelize db:seed:undo:all"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.9",
    "@nestjs/core": "^10.3.9",
    "@nestjs/platform-express": "^10.3.9",
    "@nestjs/sequelize": "^10.0.1",
    "dotenv": "^16.4.5",
    "joi": "^17.13.1",
    "mysql2": "^3.10.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "sequelize": "^6.37.3",
    "sequelize-cli": "^6.6.2",
    "sequelize-typescript": "^2.1.6"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.9",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.2",
    "@types/sequelize": "^4.28.20",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@typescript-eslint/parser": "^7.12.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-typescript-sort-keys": "^3.2.0",
    "eslint-plugin-unused-imports": "^3.2.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.4",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  }
}
